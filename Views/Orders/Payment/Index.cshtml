@model IEnumerable<Курсовая_работа_MVC.Models.PaymentMethod>

@{
    ViewData["Title"] = "Способы оплаты";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Добавить метод</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Метод оплаты</th>
            <th style="width: 160px;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PaymentMethodName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">✏️</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Удалить этот способ?');">🗑️</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Orders" asp-action="Index" class="btn btn-secondary mt-3">⬅ Назад к заказам</a>
