@model Курсовая_работа_MVC.Models.PaymentMethod

@{
    ViewData["Title"] = "Редактировать способ оплаты";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="PaymentMethodName" class="form-label">Метод оплаты</label>
        <input asp-for="PaymentMethodName" class="form-control" />
        <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
</form>
