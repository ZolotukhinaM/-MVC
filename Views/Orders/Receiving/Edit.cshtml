@model Курсовая_работа_MVC.Models.ReceivingAnOrder

@{
    ViewData["Title"] = "Редактировать способ получения";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="TypeOfReceiving" class="form-label">Тип получения</label>
        <input asp-for="TypeOfReceiving" class="form-control" />
        <span asp-validation-for="TypeOfReceiving" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
</form>
