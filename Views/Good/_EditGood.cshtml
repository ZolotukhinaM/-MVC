@model Курсовая_работа_MVC.Models.Goods
@{
    Layout = null;
}
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="max-width: 1300px;">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editModalLabel">Редактировать товар</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <form id="editGoodForm" method="post" asp-action="EditGood" asp-route-id="@Model.Id" data-ajax="true" data-ajax-method="POST" data-ajax-success="onSuccess" data-ajax-failure="onFailure">
                <div class="modal-body">
                    <div class="row g-4">
                        <!-- Название товара -->
                        <div class="col-12">
                            <label for="Name_Of_Good" class="form-label">Название товара</label>
                            <input type="text" class="form-control form-control-lg" id="Name_Of_Good" name="Name_Of_Good" value="@Model.Name_Of_Good" required />
                        </div>

                        <div class="col-12">
                            <label for="Good_Category" class="form-label">Категория</label>
                            <select class="form-select form-select-lg" id="Good_Category" name="Good_Category" required>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id" selected="@(category.Id == Model.Good_Category ? "selected" : null)">
                                        @category.good_category
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="TypeId" class="form-label">Тип</label>
                            <select class="form-select form-select-lg" name="Good_Type" required>
                                @foreach (var type in ViewBag.Types)
                                {
                                    <option value="@type.Id" selected="@(Model.Good_Type == type.Id ? "selected" : null)">
                                        @type.GoodTypeName
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="Material_Type" class="form-label">Материал</label>
                            <select class="form-select form-select-lg" id="Material_Type" name="Material_Type">
                                <option value="">-- Без материала --</option>
                                @foreach (var material in ViewBag.Materials)
                                {
                                    <option value="@material.Id" selected="@(material.Id == Model.Material_Type ? "selected" : null)">
                                        @material.TypeOfMaterial
                                    </option>
                                }
                            </select>
                        </div>


                        <!-- Цвет -->
                        <div class="col-12">
                            <label for="Color" class="form-label">Цвет</label>
                            <input type="text" class="form-control form-control-lg" id="Color" name="Color" value="@Model.Color" />
                        </div>

                        <!-- Цена -->
                        <div class="col-12">
                            <label for="Price" class="form-label">Цена</label>
                            <input type="number" class="form-control form-control-lg" id="Price" name="Price" value="@Model.Price" required />
                        </div>

                        <!-- В наличии -->
                        <div class="col-12">
                            <label for="Count_In_Availability" class="form-label">В наличии</label>
                            <input type="number" class="form-control form-control-lg" id="Count_In_Availability" name="Count_In_Availability" value="@Model.Count_In_Availability" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-success">Сохранить изменения</button>
                </div>
            </form>
        </div>
    </div>
</div>
