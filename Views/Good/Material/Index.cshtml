@model List<Курсовая_работа_MVC.Models.Material>

<h2>Материалы товаров</h2>

<a href="@Url.Action("Create")" class="btn btn-success">➕ Добавить материал</a>
<a href="@Url.Action("Index", "Good")" class="btn btn-secondary" style="margin-bottom: 15px;">⬅️ Назад к панели товаров</a>

<table class="table">
    <thead>
        <tr>
            <th>Название материала</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr>
                <td>@material.TypeOfMaterial</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = material.Id })" class="btn btn-warning">✏️ Редактировать</a>
                    <form asp-action="Delete" asp-controller="Material" method="post">
                        <input type="hidden" name="id" value="@material.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

