@model List<Курсовая_работа_MVC.Models.GoodType>

<h2>Типы товаров</h2>

<!-- Кнопка для добавления нового типа товара -->
<a href="@Url.Action("Create")" class="btn btn-success">➕ Добавить тип товара</a>

<!-- Кнопка для возвращения на панель товаров -->
<a href="@Url.Action("Index", "Good")" class="btn btn-secondary" style="margin-bottom: 15px;">⬅️ Назад к панели товаров</a>

<table class="table">
    <thead>
        <tr>
            <th>Название типа товара</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var type in Model)
        {
            <tr>
                <td>@type.GoodTypeName</td>
                <td>
                    <!-- Кнопка для редактирования типа товара -->
                    <a href="@Url.Action("Edit", new { id = type.Id })" class="btn btn-warning">✏️ Редактировать</a>

                    <!-- Форма для удаления типа товара -->
                    <form method="post" asp-action="Delete" asp-route-id="@type.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Точно удалить?');">🗑️ Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
