@model List<Курсовая_работа_MVC.Models.GoodCategory>

<h2>Категории товаров</h2>

<a href="@Url.Action("Create")" class="btn btn-success">➕ Добавить категорию</a>
<a href="@Url.Action("Index", "Good")" class="btn btn-secondary" style="margin-bottom: 15px;">⬅️ Назад к панели товаров</a>

<table class="table">
    <thead>
        <tr>
            <th>Название категории</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.good_category</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = category.Id })" class="btn btn-warning">✏️ Редактировать</a>
                    <form method="post" asp-action="Delete" asp-route-id="@category.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Точно удалить?');">🗑️ Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

